{minimum_otp_vsn, "18.1"}.
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors]}.
{deps, [
        {ejwt, {git, "https://github.com/indigo-dc/ejwt.git", {ref, "b505b08"}}},

        {gun, {git, "https://github.com/ninenines/gun.git", {ref, "d88f367"}}},
        {uri, {git, "https://github.com/erlware/uri.git", {ref, "91f6b71"}}}
       ] 
}.
{plugins, [
           {rebar3_lint, {git, "https://github.com/bwegh/rebar3_lint.git", {branch, "master"}}},
           {rebar_vsn_plugin, {git, "https://github.com/erlware/rebar_vsn_plugin.git", {branch, "master"}}},
           rebar3_proper,
           rebar3_auto,
           rebar3_run
          ]}.
{profiles, [{test, [{deps, [meck]}]}]}.

{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files },
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config }
        ] }.
