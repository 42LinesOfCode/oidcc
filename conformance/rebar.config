{minimum_otp_vsn, "18.1"}.

{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.

{deps, [
       {oidcc, {git, "https://github.com/indigo-dc/oidcc", {branch, "master"}}},
       {oidcc_cowboy, {git, "https://github.com/indigo-dc/oidcc_cowboy", {branch, "master"}}},

       {eper, "0.94.0"},
       {erlydtl, "0.11.1"},
       {lager, "3.2.1"}
       ]
}.

{relx, [{release, {conformance, "0.1.0"},
         [conformance]},
        {vm_args, "config/vm.args"},
        {sys_config, "config/sys.config"},
        {dev_mode, true},
	{include_erts, true},
        {include_src, true},
        {extended_start_script, true}
	]}.

{provider_hooks, [
                 {pre, [{compile, {erlydtl, compile}}]}
                 ]}.

{plugins, [
           {rebar3_erlydtl_plugin, ".*", {git, "https://github.com/tsloughter/rebar3_erlydtl_plugin.git", {branch, "master"}}},
	  rebar3_run
	  ]}.
